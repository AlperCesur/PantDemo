@model LoginRegistrationInMVCWithDatabase.Models.tbl_Buildings
@{
    ViewBag.Title = "Buildings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
            </li>
            <li class="breadcrumb-item active">Buildings</li>
        </ol>
        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">

                <h4><i class="fas fa-table"></i>Buildings</h4> <br />

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("Kaydet", "Account", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <tr>
                            <td>Building Type</td>
                            <td>

                                @*@Html.DropDownListFor(m => m.BuildingType, new SelectList(@ViewBag.ListofType, "ID", "BuildingType"))*@
                                @Html.TextBoxFor(m => m.BuildingType, new { @class = "form-control" })

                            </td>
                        </tr>
                        
                            <tr>
                                <td>Building Cost</td>
                                <td>
                                    @Html.TextBoxFor(m => m.BuildingCost, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.BuildingCost)
                                </td>
                            </tr>
                            <tr>
                                <td>Construction Time</td>
                                <td>
                                    @Html.TextBoxFor(m => m.ConstructionTime, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.ConstructionTime)
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    @Html.HiddenFor(m => m.ID)
                                    <input type="submit" value="Kaydet" class="btn btn-success" />
                                </td>
                            </tr>
                    </table>
                    }
                </div>
            </div>
        </div>

    </div>
</div>


